<!--cultureProducts.wxml - 文创情怀页面：文创产品展示 -->
<navigation-bar title="文创商城" homeButton="{{true}}" back="{{false}}" color="white" background="#C80000"></navigation-bar>
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="culture-products-container">
    <!-- 页面头部 -->
    <view class="page-header">
      <image class="header-bg" src="/images/culture-bg.jpg" mode="aspectFill"></image>
      <view class="header-overlay">
        <view class="header-icon">🎁</view>
        <text class="header-subtitle">红色文化创意产品</text>
        <text class="header-desc">传承红色精神，展现文化魅力</text>
      </view>
    </view>

    <!-- 分类标签 -->
    <view class="category-tabs">
      <view class="tab-item {{currentCategory === item.id ? 'active' : ''}}" 
            wx:for="{{categories}}" 
            wx:key="id"
            bindtap="switchCategory" 
            data-id="{{item.id}}">
        <text>{{item.name}}</text>
      </view>
    </view>

    <!-- 产品列表 -->
    <view class="products-grid">
      <view class="product-item" 
            wx:for="{{productList}}" 
            wx:key="id"
            bindtap="viewProductDetail" 
            data-product="{{item}}">
        <image class="product-image" src="{{item.image}}" mode="aspectFill"></image>
        <view class="product-info">
          <text class="product-name">{{item.name}}</text>
          <text class="product-desc">{{item.desc}}</text>
          <view class="product-footer">
            <text class="product-price">¥{{item.price}}</text>
            <view class="product-tag" wx:if="{{item.hot}}">
              <text>热销</text>
            </view>
          </view>
        </view>
      </view>
    </view>

    <!-- 空状态 -->
    <view class="empty-state" wx:if="{{productList.length === 0}}">
      <image class="empty-icon" src="/images/empty.png" mode="aspectFit"></image>
      <text class="empty-text">暂无产品</text>
    </view>
  </view>
</scroll-view>

